rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==========================================================
    // Helper Functions
    // ==========================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('ADMIN');
    }

    // ==========================================================
    // Collection Rules
    // ==========================================================

    // --- Users Collection ---
    match /users/{userId} {
      // Allow read (covers get and list) if:
      // 1. User is signed in (can read all profiles)
      // 2. OR the target document has role 'ADMIN' (allows public/unauth check for admin existence)
      allow read: if isSignedIn() || resource.data.role == 'ADMIN';
      
      // Write restricted to owner or admin
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    // --- Proposals Collection ---
    match /proposals/{proposalId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        resource.data.researcherId == request.auth.uid ||
        resource.data.advisorId == request.auth.uid ||
        request.auth.uid in resource.data.reviewers
      );

      allow create: if isSignedIn();

      allow update: if isSignedIn() && (
        isAdmin() ||
        resource.data.researcherId == request.auth.uid ||
        resource.data.advisorId == request.auth.uid ||
        request.auth.uid in resource.data.reviewers
      );
    }

    // --- Notifications Collection ---
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
