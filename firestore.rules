
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('ADMIN');
    }

    function notUpdating(field) {
      return !(field in request.resource.data) || request.resource.data[field] == resource.data[field];
    }

    match /users/{userId} {
      // Allow read if signed in OR if the document being read has role 'ADMIN'
      // This allows the "checkAnyAdminExists" query (where role == 'ADMIN') to pass for unauthenticated users
      allow read: if isSignedIn() || resource.data.role == 'ADMIN';
      
      // Allow creation if user is authenticated (Auth creates user first) and ID matches
      // Security: Only allow creating 'ADMIN' role if email is the bootstrap email
      allow create: if isSignedIn() && request.auth.uid == userId && (
        request.resource.data.role != 'ADMIN' || 
        request.resource.data.email == 'admin@tnsu.ac.th'
      );

      allow update: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid == userId && notUpdating('role'))
      );
      
      allow delete: if isAdmin();
    }

    match /proposals/{proposalId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        resource.data.researcherId == request.auth.uid ||
        resource.data.advisorId == request.auth.uid ||
        request.auth.uid in resource.data.reviewers
      );

      allow create: if isSignedIn();

      allow update: if isSignedIn() && (
        isAdmin() || 
        (
           resource.data.researcherId == request.auth.uid &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT' &&
           request.resource.data.status != 'REJECTED' &&
           notUpdating('reviews') &&
           notUpdating('approvalDetail') &&
           notUpdating('adminFeedback')
        ) ||
        (
           resource.data.advisorId == request.auth.uid &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT'
        ) ||
        (
           request.auth.uid in resource.data.reviewers &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT'
        )
      );
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn(); 
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid; 
    }

    match /audit_logs/{logId} {
        allow read: if isAdmin();
        allow create: if isSignedIn(); 
        allow update, delete: if false; 
    }

    match /mail/{mailId} {
        allow create: if isSignedIn();
    }
    
    match /counters/{counterId} {
       allow read, write: if isSignedIn();
    }
  }
}
