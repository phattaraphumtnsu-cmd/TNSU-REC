
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Direct helper to safely get user data, but MUST only call if exists
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isUserExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Refactored hasRole to be crash-safe: Check existence BEFORE accessing data
    function hasRole(role) {
      return isSignedIn() && 
             isUserExists() &&
             (
               ('roles' in getUserData() && role in getUserData().roles) || 
               ('role' in getUserData() && getUserData().role == role)
             );
    }

    function isAdmin() {
      return hasRole('ADMIN');
    }

    function notUpdating(field) {
      return !(field in request.resource.data) || request.resource.data[field] == resource.data[field];
    }

    match /users/{userId} {
      // Allow read if signed in (Required for listing users in dropdowns)
      allow read: if isSignedIn();
      
      // Allow creation if Admin OR if self-registration
      allow create: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid == userId && (
          !('roles' in request.resource.data) || 
          (!request.resource.data.roles.hasAny(['ADMIN']))
        ))
      );

      // Allow update self (excluding roles) or Admin
      allow update: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid == userId && notUpdating('roles') && notUpdating('role'))
      );
      
      allow delete: if isAdmin();
    }

    match /proposals/{proposalId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        resource.data.researcherId == request.auth.uid ||
        resource.data.advisorId == request.auth.uid ||
        request.auth.uid in resource.data.reviewers
      );

      // Security Fix: Ensure researcherId matches the authenticated user
      allow create: if isSignedIn() && request.resource.data.researcherId == request.auth.uid;

      allow update: if isSignedIn() && (
        isAdmin() || 
        (
           resource.data.researcherId == request.auth.uid &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT' &&
           request.resource.data.status != 'REJECTED' &&
           notUpdating('reviews') &&
           notUpdating('approvalDetail') &&
           notUpdating('adminFeedback')
        ) ||
        (
           // Advisor can only update status to APPROVED or REJECTED (via logic)
           resource.data.advisorId == request.auth.uid &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT'
        ) ||
        (
           request.auth.uid in resource.data.reviewers &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT'
        )
      );
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn(); 
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid; 
    }

    match /audit_logs/{logId} {
        allow read: if isAdmin();
        allow create: if isSignedIn(); 
        allow update, delete: if false; 
    }

    match /mail/{mailId} {
        allow create: if isSignedIn();
    }
    
    match /surveys/{userId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        allow read: if isAdmin();
    }
    
    match /counters/{counterId} {
       allow read, write: if isSignedIn();
    }
  }
}
