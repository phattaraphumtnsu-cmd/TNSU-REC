
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Direct helper to safely get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isUserExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Robust role check supporting both 'roles' array (new) and 'role' string (legacy)
    function isAdmin() {
      return isSignedIn() && 
             isUserExists() &&
             (
               (getUserData().keys().hasAny(['roles']) && 'ADMIN' in getUserData().roles) || 
               (getUserData().keys().hasAny(['role']) && getUserData().role == 'ADMIN')
             );
    }

    match /users/{userId} {
      // Allow everyone to read users (needed for dropdowns)
      allow read: if isSignedIn();
      
      // Allow create if Admin OR Self-Registration (preventing self-elevation to ADMIN)
      allow create: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid == userId && (
          !request.resource.data.keys().hasAny(['roles']) || 
          !request.resource.data.roles.hasAny(['ADMIN'])
        ))
      );

      // Allow update if Admin OR Self-Update (excluding role elevation)
      allow update: if isSignedIn() && (
        isAdmin() || 
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['roles', 'role']))
      );
      
      allow delete: if isAdmin();
    }

    match /proposals/{proposalId} {
      allow read: if isSignedIn() && (
        isAdmin() ||
        resource.data.researcherId == request.auth.uid ||
        resource.data.advisorId == request.auth.uid ||
        request.auth.uid in resource.data.reviewers
      );

      // Allow create if Admin OR Researcher (self)
      allow create: if isSignedIn() && (
        isAdmin() || 
        request.resource.data.researcherId == request.auth.uid
      );

      allow update: if isSignedIn() && (
        isAdmin() || 
        (
           // Researcher: Can update if NOT changing restricted fields (reviews, status to approved/rejected)
           resource.data.researcherId == request.auth.uid &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT' &&
           request.resource.data.status != 'REJECTED' &&
           !request.resource.data.diff(resource.data).affectedKeys().hasAny(['reviews', 'approvalDetail', 'adminFeedback'])
        ) ||
        (
           // Advisor: Can update status/feedback, but cannot finalize approval (WAITING_CERT/APPROVED reserved for Admin/System)
           resource.data.advisorId == request.auth.uid &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT'
        ) ||
        (
           // Reviewer: Can update reviews
           request.auth.uid in resource.data.reviewers &&
           request.resource.data.status != 'APPROVED' &&
           request.resource.data.status != 'WAITING_CERT'
        )
      );
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn(); // Allow system/triggers to create notifications
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid; 
    }

    match /audit_logs/{logId} {
        allow read: if isAdmin();
        allow create: if isSignedIn(); 
        allow update, delete: if false; 
    }

    match /mail/{mailId} {
        allow create: if isSignedIn();
    }
    
    match /surveys/{userId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
        allow read: if isAdmin();
    }
    
    match /counters/{counterId} {
       allow read, write: if isSignedIn();
    }
  }
}
